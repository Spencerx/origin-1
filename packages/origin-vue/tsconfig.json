{
  "compilerOptions": {
    "outDir": "dist/esm",
    "module": "esnext",
    "target": "es2020",
    "lib": ["esnext", "dom"],
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "declaration": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "types": [
      "vite-ssg",
      "vite/client",
      "vite-plugin-vue-layouts/client",
      "vite-plugin-pages/client"
    ],
  },
  "exclude": [
    "node_modules",
    "test",
    "dist"
  ]
}