{
  "compilerOptions": {
    "outDir": "dist/esm",
    "module": "esnext",
    "target": "esnext",
    "lib": [
      "esnext"
    ],
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "declaration": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
  },
  "exclude": [
    "node_modules",
    "test",
    "dist"
  ]
}